<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dummyJobTestScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <bean id="cronTriggerBean" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
                    <property name="cronExpression" value="0/1 * * * * ?" />
                    <property name="beanName" value="dummyTriggerBean" />
                    <property name="jobDetail" >
                        <bean id="dummyJobTest" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
                            <property name="jobClass" value="org.alfresco.util.CronTriggerBeanTest$DummyJob"/>
                            <property name="name" value="configuredCronJob"/>
                        </bean>
                    </property>
                </bean>
                <bean id="cronTriggerBeanDelayed" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
                    <property name="cronExpression" value="0/1 * * * * ?"/>
                    <property name="beanName" value="dummyTriggerBeanDelayed"/>
                    <property name="startDelay" value="4000"/>
                    <property name="jobDetail" >
                        <bean id="dummyJobTestDelayed" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
                            <property name="jobClass" value="org.alfresco.util.CronTriggerBeanTest$DummyJob"/>
                            <property name="name" value="configuredDelayedCronJob"/>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
        <property name="startupDelay" value="${activities.feed.notifier.startDelaySeconds}"/>
        <property name="autoStartup" value="${activities.feed.notifier.enabled}" />
    </bean>
</beans>
